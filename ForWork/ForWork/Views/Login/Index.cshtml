@model LoginViewModel

@{
    Layout = "_Layout";
}

<div class="w-100 d-flex justify-content-center">
    @if (!Model.IsSuccess)
    {
        <div>@Model.Error.Message</div>
    }
    else
    {
        <div>Success: @Model.Response</div>
    }
    <form asp-action="Login" asp-controller="Login" class="text-center w-50 align-self-center d-flex flex-column gap-2 border border-1 shadow p-4">

        <div class="form-floating mb-3">
            <input type="email" name="username" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating pb-3">
            <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>

        <button class="btn btn-primary W-25" type="submit">Submit form</button>

    </form>
</div>